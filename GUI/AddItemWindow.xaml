<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Arsenal.GUI.AddItemWindow"
        Title="Add New Item" Height="150" Width="300">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <TextBox x:Name="Classname" Text="Insert classname here" GotFocus="FieldFocus" TextChanged="textChanged"/>
            <TextBox x:Name="Quanity" Text="12" Padding="5,1,5,0" VerticalContentAlignment="Center" />
        </StackPanel>
        <Label x:Name="Error" Content="Field cannot be empty" Foreground="Red" FontSize="10" Padding="0" DockPanel.Dock="Top" d:IsHidden="True"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Margin="0,0,0,25">
            <Button x:Name="AddButton" Content="Add" Width="75" Margin="0,0,15,0" Click="ButtonClick"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="75" Click="ButtonClick"/>
        </StackPanel>
    </DockPanel>

</Window>
